<script>
  jQuery(function ($) { // Using https://github.com/sdepold/jquery-rss
    $("#rss-feed").rss("{{{feed}}}",
      {
        layoutTemplate: "<div id='news' class='continous vertical-center'> {entries} </div>",
        entryTemplate: "<span class='feed-text'> {title} <span class='bullet'> &#8226;</span> </span>",
        host: 'feedrapp.info',
        limit: 10
      })
  })
</script>


<div id="wrapper">
  <div id="rss-feed"></div>
  <div id="bar"></div>
</div>

<script>
  $('#rss-feed').width($('#news').width());
</script>

