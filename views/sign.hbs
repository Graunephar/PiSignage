<script>
//https://www.jqueryscript.net/animation/jQuery-Plugin-Scrolling-Elements-Ticker.html ticker source
  window.setInterval(rssUpdate, 3600000);

  function rssUpdate() {
    jQuery(function ($) { // Using https://github.com/sdepold/jquery-rss
    $("#rss-feed").rss("{{{feed}}}",
      {
        layoutTemplate: "<div class='default-ticker'> {entries} </div>",
        entryTemplate: "<div class='feed-text vertical-center'> {title} <span class='bullet'> &#8226; </span></div>",
        host: 'feedrapp.info',
        limit: 10,
        success: function() {
          $(".default-ticker").ticker({speed: 200});
        }
      })
  })
  }

  rssUpdate();
</script>

<div id="wrapper">
  <div id="rss-feed"></div>
  <div id="bar"></div>
</div>

